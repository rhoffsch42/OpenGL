---- TIPS FOR LATER USE	-------------------------------------------------------
http://cpp.sh/8wyol
// Example program
#include <iostream>
#include <string>
#include <functional>
#include <list>
using namespace std;

class Object {
public:
	Object() { this->n = 0; }
	~Object() {}
	int n;
};

ostream& operator<<(ostream& os, const Object& src)  
{  
    os << src.n << endl;  
    return os;
}  

int main()
{
  std::list<std::reference_wrapper<Object>> container;

  Object a;
  a.n = 12;
  container.push_back(a);  // or std::ref(a)

  // now container = { 12 };

  a.n = 13;
  for (auto i : container) {
      cout << i;
  }
  // now container = { 13 };
  return (0);
}
